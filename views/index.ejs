<%layout("boilerplate")%>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
  }
  .filter {
    margin-top: 2rem;
    margin-left: 2.7rem;
    text-align: center;
    /* margin-right: 0.2rem; */
    opacity: 0.7;
    padding: -0.5rem;
    margin-right: -0.5rem;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer !important;
  }
  .filter p {
    
    font-size: 0.8rem;
  }
  .tax-info{
    display: none;
  }
  .toggle{
    border: 1px solid black !important;
    border-radius: 1rem !important;
    padding: 1rem;
    height: 3rem;
    margin-top: 2rem;
    font-size: 0.8rem;
    margin-left: 3rem;
  }
</style>
<body>
  <h1>All Places</h1>

  <div id="filters">
    <div class="filter" id="Trending">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castle</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tents"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tractor"></i></i></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></i></i></div>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-house-flood-water"></i></i></i></i></div>
      <p>WaterFalls</p>
    </div>
    <div class="toggle">
      <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
  <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
</div>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 main mt-3">
    <%for(let listing of alllistings){%>
    <div class="card col listing-card" style="width: 18rem">
      <img
        class="card-img-top"
        src="<%=listing.image.url%>"
        alt="Card image cap"
      />
      <div class="card-body">
        <h5 class="card-title"></h5>
        <p class="card-text">
          <b> <%=listing.title%> </b><br />
          &#x20B9;<%=listing.price.toLocaleString("en-IN")%>/night
          <i class="tax-info"> +18% GST</i>
        </p>
        <a href="/listings/<%=listing._id%>" class="btn btn-dark explore-btn"
          >Explore This Place</a
        >
      </div>
    </div>
    
    <%}%>
    

  </div>
</body>

<script>
  let taxswitch=document.getElementById("flexSwitchCheckDefault");
  taxswitch.addEventListener("click",()=>{
    let taxinfo=document.getElementsByClassName("tax-info");
    for(let i=0; i<taxinfo.length; i++){
      if(taxswitch.checked){
        taxinfo[i].style.display="block";
      }else{
        taxinfo[i].style.display="none";
      }
    }
    
   
  });





</script>